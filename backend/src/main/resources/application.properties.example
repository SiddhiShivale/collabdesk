# CollabDesk Application Configuration Example
# -------------------------------------------
# INSTRUCTIONS:
# 1. Rename this file to "application.properties".
# 2. Fill in the placeholder values below with your own local configuration.
# -------------------------------------------

spring.application.name=CollabDesk

# Server Configuration
server.port=8080

# PostgreSQL Database Connection
spring.datasource.url=jdbc:postgresql://localhost:5432/your_database_name
spring.datasource.username=your_db_username
spring.datasource.password=your_db_password
spring.datasource.driver-class-name=org.postgresql.Driver

# JPA and Hibernate Configuration
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# Application Security JWT Configuration
# Generate your own secret key. You can use an online generator for a 64-character Base64 key.
application.security.jwt.secret-key=YOUR_OWN_SUPER_SECRET_JWT_KEY_HERE
application.security.jwt.access-token-expiration-ms=3600000 
application.security.jwt.refresh-token-expiration-ms=604800000

# Spring Mail Configuration 
spring.mail.host=smtp.gmail.com
spring.mail.port=587
spring.mail.username=your_email@gmail.com
spring.mail.password=your_gmail_app_password 
# IMPORTANT: For Gmail, you must generate an "App Password". Do not use your main account password.

# Enable SMTP authentication and TLS
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true

# Application Frontend URL
application.frontend.url=http://localhost:4200

# Default Admin User Configuration
collabdesk.admin.email=admin@collabdesk.com
collabdesk.admin.password=password123